.toast {
  position: fixed;
  /* min-width: 80px;
  max-width: 260px; */
  top: 150%;
  left: 50%;
  padding: 20rpx 32rpx;
  transform: translate(-50%);
  transition: top 0.2s ease-in;
  text-align: center;
  word-break: break-word;
  border-radius: 6rpx;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.6);
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  font-size: 32rpx;
  line-height: 1.43;
}

.toast.show {
  top: 70%;
}
